<%- include("partials/header"); %>

<main class="main w-screen h-screen grid place-items-center">
  <img
    src="images/logo.png"
    alt="logo"
    width="50px"
    class="absolute top-[18vh]"
  />
  <div class="w-[320px]">
    <form action="/login" method="post">
      <h1 class="text-center font-bold text-3xl text-white mb-7">
        Welcome back
      </h1>

      <input
        type="email"
        name="email"
        placeholder="Email address"
        class="block w-full h-[3rem] rounded my-5 px-3 border outline-0 bg-transparent placeholder:text-white text-white"
      />

      <input
        type="password"
        name="password"
        placeholder="Password"
        class="block w-full h-[3rem] rounded my-5 px-3 border outline-0 bg-transparent placeholder:text-white text-white"
      />

      <% if (typeof message !== 'undefined') { %>
        <div class="w-full h-[2rem] text-center rounded my-3 text-rose-500 font-semibold">
          <%= message %>
        </div>
      <% } %>

      <button class="w-full h-[3rem] rounded bg-green-400 text-white">
        Continue
      </button>  
      
      <p class="text-center mt-5">
        Don't have an account?
        <a href="/signup" class="text-green-400">Sign up</a>
      </p>
    </form>
  </div>
</main>

<%- include("partials/footer"); %>
