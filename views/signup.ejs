<%- include("partials/header"); %>

<main class="main w-screen h-screen grid place-items-center">
  <img
    src="images/logo.png"
    alt="logo"
    width="50px"
    class="absolute top-[5vh]"
  />
  <div class="w-[320px]">
    <form class="form" action="/signup" method="post">
      <h1 class="text-center font-bold text-3xl text-white mb-7">
        Create your <br />
        account
      </h1>

      <input
        type="text"
        name="name"
        placeholder="Full name"
        class="block w-full h-[3rem] rounded my-5 px-3 border outline-0 bg-transparent placeholder:text-white text-white"
      />

      <input
        type="number"
        name="phone"
        placeholder="Phone No."
        class="block w-full h-[3rem] rounded my-5 px-3 border outline-0 bg-transparent placeholder:text-white text-white"
      />

      <input
        type="email"
        name="email"
        placeholder="Email Id"
        class="block w-full h-[3rem] rounded my-5 px-3 border outline-0 bg-transparent placeholder:text-white text-white"
      />

      <input
        type="password"
        name="password"
        placeholder="Password"
        class="block w-full h-[3rem] rounded my-5 px-3 border outline-0 bg-transparent placeholder:text-white text-white"
      />

      <% if (typeof message !== 'undefined') { %>
        <div class="w-full h-[2rem] text-center rounded my-3 text-rose-500 font-semibold">
          <%= message %>
        </div>
      <% } %>

      <button class="w-full h-[3rem] rounded bg-green-400 text-white">
        Continue
      </button>

      <p class="text-center mt-5">
        Already have an account?
        <a href="/" class="text-green-400">Log in</a>
      </p>
    </form>
  </div>
</main>

<%- include("partials/footer"); %>
